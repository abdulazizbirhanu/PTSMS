@model PTSMSDAL.Models.Curriculum.View.EvaluationTemplateView

@{
    ViewBag.Title = "Details";
    ViewBag.Name = "Evaluation Template Details.";
}
<div class="container">
    @{
        if (Model != null)
        {
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="callout callout-info">
                        <h4>Evaluation Template Details.</h4>
                        <dl class="dl-horizontal">
                            <dt>
                                Previous @Html.DisplayNameFor(model => model.EvaluationTemplate.PreviousEvaluationTemplate.EvaluationTemplateName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EvaluationTemplate.PreviousEvaluationTemplate.EvaluationTemplateName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.EvaluationTemplate.EvaluationTemplateName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EvaluationTemplate.EvaluationTemplateName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.EvaluationTemplate.EffectiveDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EvaluationTemplate.EffectiveDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.EvaluationTemplate.RevisionNo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EvaluationTemplate.RevisionNo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.EvaluationTemplate.Status)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EvaluationTemplate.Status)
                            </dd>

                        </dl>

                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.EvaluationTemplate.EvaluationTemplateId }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>

                    </div>
                </div>
                <!-- /.box-body -->
                @*<div class="box-footer">
                        Footer
                    </div>*@
                <!-- /.box-footer-->
            </div>

            <div class="col-md-8">
                <div class="box box-solid">
                    <div class="box-header with-border">
                        <i class="fa fa-list-ol"></i>
                        <h3 class="box-title">Category and Item List for <strong> @Model.EvaluationTemplate.EvaluationTemplateName</strong></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <ol>
                            @{
            foreach (var evaCat in Model.EvaluationCategories)
            {
                <li>
                    <strong>
                        @evaCat.EvaluationCategory.EvaluationCategoryName
                    </strong>
                    <ol>
                        @foreach (var evaItem in evaCat.EvaluationItems)
                        {
                            <li>@evaItem.EvaluationItemName </li>
                        }
                    </ol>
                </li>
            }
                            }

                        </ol>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        }
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EvaluationTemplate.EvaluationTemplateId }) |
    @Html.ActionLink("Go to Evaluation Template List", "Index")
</p>














 