
@model PTSMSDAL.Models.Others.View.InstructorProfileView

@{
    ViewBag.Title = "Profile";
    ViewBag.Name = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .custom-Col {
        border-right: 3px solid;
        border-color: #517842;
    }
</style>

@section scripts{
<script type="text/javascript">

    $(document).ready(function () {

        $('#Email').val('@Model.Email');
        $('#Phone').val('@Model.Phone');

        //$("#btnUpdate").submit(function (event) {

        //});
          @{
              if (ViewBag.GlobalMessage != null)
              {
                  var tempMessage = ViewBag.GlobalMessage;
                  ViewBag.GlobalMessage = null;
                  <text> bootbox.alert('@tempMessage');</text>
              }
          }
    });
</script>
    }

<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title"> INSTRUCTOR PROFILE</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">

        @using (Html.BeginForm("UpdateProfile", "InstructorProfile", FormMethod.Post, new { enctype = "multipart/form-data", id = "btnUpdate" }))
        {
            @Html.AntiForgeryToken()
            <div style="color:red"> @Html.ValidationSummary()</div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 custom-Col">
                    <fieldset>
                        <legend>Instructor Info</legend>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.FirstName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.MiddleName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MiddleName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.LastName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.LastName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.CompanyId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CompanyId)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Sex)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Sex)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.BirthDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.BirthDate)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Position)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Position)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.RegistrationDate)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.RegistrationDate)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                        </dl>
                    </fieldset>

                    <fieldset>
                        <legend>Other Info</legend>
                        <dl class="dl-horizontal">                             
                            <dt>
                                @Html.DisplayNameFor(model => model.Qualification)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Qualification)
                            </dd>

                        </dl>
                    </fieldset>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <fieldset>
                        <legend>Contact Address</legend>
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.Location)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Location)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Nationality)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nationality)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.City)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.City)
                            </dd>

                            <dt>
                                <br />
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>

                            <dd>
                                <br />
                                <input type="text" class="form-control" name="Phone" id="Phone" placeholder="Phone" data-val="true" data-val-required="Phone is required." />
                            </dd>

                            <dt>
                                <br />
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                <br />
                                <input type="text" class="form-control" name="Email" id="Email" placeholder="Email" data-val="true" data-val-required="Email is required." />
                            </dd>
                            <dt>

                            </dt>
                            <dd>
                                <br />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-4">
                                        <input type="submit" value="Update" class="btn btn-info" />
                                    </div>
                                </div>
                            </dd>
                        </dl>
                    </fieldset>
                </div>
            </div>
        }
    </div>
</div>