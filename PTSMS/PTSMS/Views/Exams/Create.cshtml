@model PTSMSDAL.Models.Curriculum.Operations.Exam

@{
    ViewBag.Title = "Create";
    ViewBag.Name = "Create Exam.";
}
<link href="~/Content/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
    <script src="~/Content/AdminLTE/plugins/datepicker/bootstrap-datepicker.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.PTSMSDatepicker').datepicker({
                autoclose: true,
                todayHighlight: true
            });
        });

        $("#IsPassFailExam").click(function () {
            if ($(this).prop("checked") == true) {
                $("#WeightLabel").hide();
                $("#PassingMarkLabel").hide();
                $("#Weight").val("");
                $("#PassingMark").val("");
            } if ($(this).prop("checked") == false) {
                $("#WeightLabel").show();
                $("#PassingMarkLabel").show();
            }
        });

        if ($("#IsPassFailExam").prop("checked") == true) {
            $("#WeightLabel").hide();
            $("#PassingMarkLabel").hide();
            $("#Weight").val("");
            $("#PassingMark").val("");
        }

    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IsPassFailExam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.CheckBoxFor(model => model.IsPassFailExam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsPassFailExam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="WeightLabel">
