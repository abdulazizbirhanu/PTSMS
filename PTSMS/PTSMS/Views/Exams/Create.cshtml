                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="PassingMarkLabel">
            @Html.LabelFor(model => model.PassingMark, htmlAttributes: new { @class = "control-label col-md-2" })
