@model PTSMSDAL.Models.Scheduling.Relations.InstructorEquipmentModel

@{
    ViewBag.Title = "Create";
    ViewBag.Name = "Create Instructor Equipment Model";
 Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<script type="text/javascript">
    $(function () {
        $("#EquipmentModelId").multiselect({
            includeSelectAllOption: true,
            columns: 1,
            placeholder: 'Select Equipment Model/s',
            search: true,
            selectAll: true
        });
    });


</script>


<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EquipmentModelId, "EquipmentModelId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("EquipmentModelId", null, htmlAttributes: new { @class = "form-control", @multiple = "multiple", @onselect = "EqupmentModelFunc();" })
            @Html.ValidationMessageFor(model => model.EquipmentModelId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Instructor.Person.FirstName, "InstructorId", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.DropDownList("InstructorId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Instructor.Person.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

 