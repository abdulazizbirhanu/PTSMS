@model PTSMSDAL.Models.Dispatch.Master.OverallGradeUpdateRequest

@{
    ViewBag.Title = "Details";
    ViewBag.Name = "Grade Update Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Overall Grade Update Request Details</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>          
        </div>
    </div>

    <!-- /.box-header -->
    <div class="box-body no-padding">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Trainee
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FlyingFTDSchedule.Trainee.Person.FirstName)  @Html.DisplayFor(model => model.FlyingFTDSchedule.Trainee.Person.MiddleName)
                </dd>

                <dt>
                    Instructor
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FlyingFTDSchedule.Instructor.Person.FirstName)  @Html.DisplayFor(model => model.FlyingFTDSchedule.Instructor.Person.MiddleName)
                </dd>

                <dt>
                    Lesson
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FlyingFTDSchedule.Lesson.LessonName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NewOverallGrade.OverallGradeName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NewOverallGrade.OverallGradeName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.RequestedDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RequestedDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ApprovedBy)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ApprovedBy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ApprovedDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ApprovedDate)
                </dd>
            </dl>
        </div>

    </div>
</div>