
@model PTSMSDAL.Models.Dispatch.Master.OverallGradeUpdateRequest

@using (Html.BeginForm("Create", "OverallGradeUpdateRequest", FormMethod.Post, new { enctype = "multipart/form-data", id = "" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <div class="col-md-10">
                <label id="ScheduleDetail" name="ScheduleDetail"></label>
            </div>
        </div>

        <div class="form-group hide">
            @Html.LabelFor(model => model.FlyingFTDScheduleId, "FlyingFTDScheduleId", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.FlyingFTDScheduleId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FlyingFTDScheduleId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewOverallGradeId, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-4">
                @Html.DropDownList("NewOverallGradeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewOverallGradeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hide">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group hide">
            @Html.LabelFor(model => model.RequestedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RequestedDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RequestedDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $(document).ready(function () {


        //evaluationHeader,evaluationFooter
        @{

            if (ViewBag.ScheduleDetail != null)
            {
                <text>

        $('#ScheduleDetail').html('@ViewBag.ScheduleDetail');
        </text>
            }
        }

    });
</script>
